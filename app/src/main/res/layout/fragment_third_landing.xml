<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".landingpage.fragmentlanding.ThirdLandingFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieView"
        android:layout_width="298dp"
        android:layout_height="198dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="51720-making-money.json"
        app:lottie_loop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Earn From Your Waste"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/medium_green"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/medium_green"
        android:textSize="18sp"
        android:text="Nature is painting for us, day after day, pictures of infinite beauty."/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_button_login"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/medium_green"
        android:backgroundTint="@color/light_grey"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_button_login_landingpage"/>

</LinearLayout>