<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.landingpage.fragmentlanding.ThirdLandingFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieView"
        android:layout_width="298dp"
        android:layout_height="198dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="51720-making-money.json"
        app:lottie_loop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Earn From Your Waste"
        android:textSize="26sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/medium_green"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/medium_green"
        android:textSize="18sp"
        android:text="Nature is painting for us, day after day, pictures of infinite beauty."/>

    <Button
        android:id="@+id/btnLetsStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_button_login"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Let's get started"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</LinearLayout>