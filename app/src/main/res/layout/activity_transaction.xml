<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.home.transaction.TransactionActivity">

    <LinearLayout
        android:id="@+id/llMenu"
        android:layout_width="66dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llSemua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="60dp">
            <ImageView
                android:id="@+id/ivSemua"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/all"
                android:layout_gravity="center"
                app:tint="@color/medium_green" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Semua"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llKertas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="25dp">
            <ImageView
                android:id="@+id/ivKertas"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:tint="@color/medium_green"
                android:src="@drawable/paper"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Kertas"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPlastik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="25dp">
            <ImageView
                android:id="@+id/ivPlastik"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/plastik"
                app:tint="@color/medium_green"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="PLastik"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLogam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="25dp">
            <ImageView
                android:id="@+id/ivLogam"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/beam"
                app:tint="@color/medium_green"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Logam"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llKaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="25dp">
            <ImageView
                android:id="@+id/ivKaca"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/glass"
                app:tint="@color/medium_green"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kaca"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="25dp">
            <ImageView
                android:id="@+id/ivLain"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/other"
                app:tint="@color/medium_green"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lain-lain"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clHeader"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/llMenu"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPricelist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pricelist"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/ivCart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_cart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <fragment
        android:id="@+id/nav_host_fragment_content_transaction"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/llMenu"
        app:layout_constraintTop_toBottomOf="@id/clHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/mobile_transaction_navigation"/>



</androidx.constraintlayout.widget.ConstraintLayout>